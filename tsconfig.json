{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ESNext",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "paths": {
      "ref.js": ["./src/index.ts"]
    }
  },
	"include": [
    "src/**/*",
    "tests/**/*"
  ]
}
